        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.FOTOGRAF, "", new { @style = "color:forestgreen" })
