@using MvcKutuphanem.Models.Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel İşlemleri</h2>

<div style="margin-bottom:15px; margin-top:15px;"></div>

<table class="table table-striped">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>PERSONEL NO</th>
        <th>PERSONEL ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>   
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.PERSONEL</td>
            <td>@Html.ActionLink("Sil", "PersonelSil", new { id = ktg.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Personel/PersonelGetir/@ktg.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Ekle</a>
