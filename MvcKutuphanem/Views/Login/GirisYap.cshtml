          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Üye Giriş Formu</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yapın</h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Kullanıcı Adınız:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız ?" required="required" name="MAIL" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şİfrenİz:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifreniz ?" required="required" name="ŞIFRE" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifremi Unuttum!</a>
                <p><input type="checkbox">Beni Hatırla</p>
            </div>
            <button type="submit">Gİrİş Yap</button>
        }
        <p class=" w3l-register-p">Hesabın Yokmu ? <a href="/KayitOl/Kayit/" class="register">Kayıt Ol</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; Kütüphane Yönetim Sistemi | Korkut Anadolu Lisesi <a href="#">Nihat Ovalıoğlu</a></p>
    </footer>

</body>

</html>